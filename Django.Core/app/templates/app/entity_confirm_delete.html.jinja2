{% raw %}
{% extends 'base.html' %}

{% load bootstrap3 %}

{% block content %}
{% endraw %}
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{m_model.Name}} <small>edit</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i>  <a href="{% raw %}{%{% endraw %} url '{{m_model.UrlForList}}' {% raw %}%}{% endraw %}">{{m_model.Name|lower}}s</a>
                </li>
                <li class="active">
                    <i class="fa fa-edit"></i> edit
                </li>
            </ol>
        </div>
    </div>

    <form action="" method="post" class="form">
        {% raw %}{% csrf_token %}{% endraw %}
        <p>Are you sure you want to delete {{m_model.Name}}: {% raw %}{{{% endraw %} item.{{m_model.MainProperty}} {% raw %}}}{% endraw %}?</p>
        {% raw %}
        {% buttons %}
        <button type="submit" class="btn btn-primary"> Confirm</button>
        {% endbuttons %}
        {% endraw %}
    </form>
    <form action="{% raw %}{%{% endraw %} url '{{m_model.UrlForList}}' {% raw %}%}{% endraw %}" method="get" class="form">
        {% raw %}
        {% csrf_token %}
        {% buttons %}
        <button type="submit" class="btn btn-primary"> Cancel</button>
        {% endbuttons %}
    </form>

{% endblock content %}
        {% endraw %}